{
    "name": "gjs-app",
    "version": "1.0.0",
    "description": "",
    "main": "app.js",
    "scripts": {
            "build": "tsc && rsync -av --exclude='*.ts' --exclude='*.tsx' src/ dist/",
                "watch": "npm run dev",
                "watch:ts": "tsc -w",
                "watch:assets": "nodemon --watch src --ext css --exec \"copyfiles -u 1 'src/**/*.css' dist\"",
                "start:dev": "nodemon --watch dist --ext js,css --delay 1 --exec \"gjs -m dist/app.js\"",
                "dev": "concurrently -n \"TS,CSS,APP\" -c \"blue,magenta,green\" \"npm run watch:ts\" \"npm run watch:assets\" \"npm run start:dev\"",            "lint": "eslint .",
            "format": "prettier --write .",        "start": "gjs -m dist/app.js",
        "package": "./tools/build.sh"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "commonjs",
    "devDependencies": {
        "@girs/gio-2.0": "^2.86.0-4.0.0-beta.38",
        "@girs/gjs": "^4.0.0-beta.38",
        "@girs/glib-2.0": "^2.86.0-4.0.0-beta.38",
        "@girs/gobject-2.0": "^2.86.0-4.0.0-beta.38",
        "@girs/gtk-4.0": "^4.20.1-4.0.0-beta.38",
        "concurrently": "^9.2.1",
        "copyfiles": "^2.4.1",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "nodemon": "^3.1.11",
        "prettier": "^3.7.4",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.50.0"
    }
}
